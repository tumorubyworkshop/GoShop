<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="http://www.coca-colarussia.ru/content/dam/journey/ru/ru/private/2018/09/fanta-instamix/0-zahod-940-fanta-instamix-new-2.png" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://www.stealingshare.com/wp-content/uploads/2014/07/Up-Products.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://d2wvksc3i53c0p.cloudfront.net/media/catalog/product/cache/2/image/1800x/6b9ffbf72458f4fd2d3cb995d92e8889/s/a/sac_6-pack-bottle-update-cz-2_2.png" alt="Third slide">
    </div>
  </div>
</div>
<div class="row">
	<% @products.each do |product| %>
		<div class="col-lg-4 col-md-6 mb-4">
			<div class="card h-100">
				<%= image_tag(product.photo, class: "card-img-top", style: "width: 100px; margin: auto; margin-top: 10px;") unless product.photo.nil? %>
				<div class="card-body">
					<h4><%= product.name %></h4>
					<h5><%= product.price %> AED </h5>
					<p class="card-text"><%= product.description %></p>
				</div>
				<div class="card-footer">
					<%= link_to 'Add to cart', cart_add_path(product: product.id), class: 'btn btn-primary' %>
				</div>
			</div>
		</div>
	<% end %>
</div>