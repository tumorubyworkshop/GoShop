<div class="row">
	<% @products.each do |product| %>
		<div class="col-lg-4 col-md-6 mb-4">
			<div class="card h-100">
				<%= image_tag(product.photo, class: "card-img-top", style: "width: 100px; margin: auto;") unless product.photo.nil? %>
				<div class="card-body">
					<h4><%= product.name %></h4>
					<h5>AMD: <%= product.price %></h5>	
					<p class="card-text"><%= product.description %></p>
				</div>
				<div class="card-footer">
					<%= link_to 'Add to cart', cart_add_path(product: product.id), class: 'btn btn-primary' %>
					<%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %>
					<%= link_to 'Delete', product, method: :delete, date: {confirm: 'Are you sure?'}, class: 'btn btn-primary' %>
				</div>
			</div>
		</div>		
	<% end%>

</div>
<%= link_to 'Add', new_product_path, class: 'add btn btn-primary'  %>